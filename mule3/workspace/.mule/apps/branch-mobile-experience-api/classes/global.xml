    <api-platform-gw:api apiName="${application.name}" version="${api.version}" flowRef="branch-mobile-experience-api-main" create="true"  doc:name="API Autodiscovery"/>
 <http:request-config name="HTTP_Request_Configuration_System_layer" host="${branch.system.host}" port="${branch.system.port}" basePath="${branch.system.basePath}" connectionIdleTimeout="600000" doc:name="HTTP Request Configuration"  responseTimeout="${system.api.call.response.timeout}" protocol="HTTPS"/>
     <http:request-config name="HTTP_Request_Configuration" host="${error.http.host}" port="${error.http.port}" doc:name="HTTP Request Configuration" protocol="HTTPS"/>

    <!-- Used for experience APIs deployed to Cloudhub -->
    <http:listener-config name="Cloudhub_HTTP_Listener_Configuration" protocol="HTTPS" host="0.0.0.0" port="${https.port}" doc:name="HTTP Listener Configuration">
        <tls:context>
            <tls:key-store type="jks" path="keystore.jks" keyPassword="mule123" password="mule123"/>
        </tls:context>
    </http:listener-config>
    <context:property-placeholder location="branch-mobile-experience-api-${env}.properties"/>
    
